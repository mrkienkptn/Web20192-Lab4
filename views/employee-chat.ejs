<%- include('header-employee')  %>
    
        <h2 class="head-chat">Chat with whom you send proposal</h2>
        <div class="container-chat">
            <div class="chat-tab-left">
                <% clientList.forEach(function(client, index){%> 
                    <div class="item-client">
                        <div id="client-name-<%=index %>" class="client-name">
                            <p><%=client.name  %></p> 
                        </div>
                        <div class="btn-chat">
                            
                            <button  class="client-<%=index%>" value="<%=client.id %>">Chat</button>
                        </div>
                    </div>
                    <%}) %> 
            </div>
            <div class="chat-tab-right-bound">
                <% clientList.forEach(function(client, index){%>
                    <div class="chat-tab-right" id="chat-tab-right-<%=index %>">
                        <div class="cl_name client-name-right<%=index %>"><p><%=client.name  %></p>  </div>
                        <div class="message" id="all-message-<%=client.id %>"></div>
                        <div class="form-<%=index %>">
                            <form action="">
                                <input type="text" class="msg" id="msg-<%=index %>">
                                <input type="submit" value="Send">
                            </form>
                        </div>
                    </div>
               <% }) %> 
            </div>
        </div>

<%- include('footer') %> 