<%- include ('header-employee') %>

<div class="profile">
  <!-- thanks -->
  <div class="thanks">
    Thanks for joining in <span style="color: green; font-weight: bold;">Divuvila</span>, <span
      ><%=user.name%></span>

  </div>


  <div class="wrap">
    <div class=" column-info">

      
      <div class="col-1 name">
        <p class="name"><%=user.name%></p>
        <p style="color: red;"><%=user.other.country%></p>
        <p class=""><%=user.other.email%></p>
        
      </div>

      <div class="col-1 about">
          <p class="h">About Me</p>
          <p class="about-me"><%=user.other.about_me%></p>
          <button id="change_intro">Change</button>
          <form action="/change_profile" method="POST" class="change_intro">
          <input type="text" rows="10" cols="20" name="about_me" >
          <input class="submit-change" type="submit" value="Apply">
          </form>
        </div>
        
      <div class="col-1 skills">
        <p class="h">Your Skills</p>
        <form action="/change_profile" method="POST" class="add-skill">
          <input type="text" name="skill"  >
          <input type="submit" value="Add">
        </form>
        <div class="skill">
          <% if (user.other.skill != []){%>
          <% user.other.skill.forEach(function(sk){%>
              <p><%=sk%></p>
            <%});%>
          <%}%>
        </div>
        
      </div>

      <div class="col-1 complete_projects">
        <p class="h">Completed Projects</p>
        <form action="/change_profile" method="POST" class="add-project">
          <input type="text" name="project"  >
          <input type="submit" value="Add">
        </form>
        <div class="projects">
        <% if (user.completed_projects != []){%>
          <% user.completed_projects.forEach(function(pr){%>
            <p><%=pr.name%></p>
          <%});%>
          <%}%>
        </div>
        
        
      </div>

      <div class="col-1 edu-level">
        <p class="h">Education</p>
        <div>
          <%=user.other.education_level%>
        </div>
      </div>

    </div>

    <div class="more-info">

      

      <div class="col-2 exp">
        <p class="h1">Experience</p>
        <p><%=user.other.experience%></p>
      </div>

      <div class="col-2 ">
        <p class="h1">Price</p>
        <p style="color: rgb(255, 81, 0);"><%=user.other.price%> $/h</p>
      </div>

      <div class="col-2 change-prof">
        <button>Change Profiles</button>
      </div>

    </div>

  </div>
</div>
<div class="overlay">
    
</div>
