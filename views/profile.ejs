<% if (user.Type=="client") { %>

<%- include('header-client') %>
<div class="client-profile">
  <%=user.Type %> 
  <p>Your email: <%=user.other.email  %>  </p>
</div>
<form action="/change-profile-client" method="post">
  <input type="text" name="email" placeholder="New email">
  <input type="submit" value="Change">
</form>
<button><a href="/hire_info">up work</a></button>

<button><a href="/ownPost">my post</a></button>
<br/>
